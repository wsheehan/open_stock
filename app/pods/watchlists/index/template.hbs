{{outlet}}

<div class="container-fluid">
  <div class="row">
    <div class="col-sm-4">
      {{#each model as |watchlist|}}
        {{watchlist-tab watchlist=watchlist selectWatchlist=(route-action "selectWatchlist")}}
      {{/each}}
    </div>
    <div class="col-sm-8">
      {{#if selectedWatchlist}}
        <p>{{selectedWatchlist.title}}</p>
      {{else}}
        <p>No Watchlist Chosen</p>
      {{/if}}
    </div>
  </div>
</div>
